<Window x:Class="StockPredictor.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockPredictor.Views"
        mc:Ignorable="d"
        Title="Stock Predictor" Height="720" Width="1080"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <TabControl Margin="10" FontFamily="Segoe UI" FontSize="14">
            <!-- Dashboard Tab -->
            <TabItem Header="📊 Dashboard">
                <Grid Margin="10">
                    <StackPanel>
                        <TextBlock Text="Total Invested: $" FontWeight="Bold" />
                        <TextBlock Text="Total Value: $" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBlock Text="Gain/Loss: $" FontWeight="Bold" Margin="0,5,0,10"/>
                        <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,10,0,0">
                            <TextBlock Text="Portfolio Growth Chart (Coming Soon)" HorizontalAlignment="Center" />
                        </Border>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Add Investment Tab -->
            <TabItem Header="➕ Add Investment">
                <StackPanel Margin="20">
                    <TextBlock Text="Stock Ticker:" />
                    <TextBox x:Name="TickerInput" Width="200"/>

                    <TextBlock Text="Amount Invested ($):" Margin="0,10,0,0"/>
                    <TextBox x:Name="AmountInput" Width="200"/>

                    <TextBlock Text="Price per Share:" Margin="0,10,0,0"/>
                    <TextBox x:Name="PriceInput" Width="200"/>

                    <TextBlock Text="Date of Purchase:" Margin="0,10,0,0"/>
                    <DatePicker x:Name="DateInput" Width="200"/>

                    <Button Content="Add Investment" Margin="0,20,0,0" Width="200" />
                </StackPanel>
            </TabItem>

            <!-- Holdings Tab -->
            <TabItem Header="📁 Portfolio">
                <DataGrid x:Name="HoldingsGrid"
                          AutoGenerateColumns="False"
                          Margin="10"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Ticker" Binding="{Binding Ticker}" />
                        <DataGridTextColumn Header="Shares" Binding="{Binding SharesPurchased}" />
                        <DataGridTextColumn Header="Cost/Share" Binding="{Binding PricePerShare}" />
                        <DataGridTextColumn Header="Total Invested" Binding="{Binding AmountInvested}" />
                        <DataGridTextColumn Header="Purchase Date" Binding="{Binding PurchaseDate}" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- AI Recommendations -->
            <TabItem Header="🤖 AI Insights">
                <Grid Margin="10">
                    <StackPanel>
                        <TextBlock Text="Top Picks (Based on Trend Analysis)" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" />
                        <ListView x:Name="RecommendationsList">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Ticker" DisplayMemberBinding="{Binding Ticker}" Width="100"/>
                                    <GridViewColumn Header="Price" DisplayMemberBinding="{Binding CurrentPrice}" Width="100"/>
                                    <GridViewColumn Header="CAGR10Y" DisplayMemberBinding="{Binding CAGR10Y}" Width="100"/>
                                    <GridViewColumn Header="AI Recommendation" DisplayMemberBinding="{Binding Recommendation}" Width="150"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Settings -->
            <TabItem Header="⚙ Settings">
                <StackPanel Margin="20">
                    <TextBlock Text="Investment Frequency:" />
                    <ComboBox SelectedIndex="0" Width="200">
                        <ComboBoxItem Content="Bi-weekly ($20)" />
                        <ComboBoxItem Content="Monthly ($40)" />
                        <ComboBoxItem Content="Custom..." />
                    </ComboBox>

                    <TextBlock Text="Risk Profile:" Margin="0,10,0,0"/>
                    <ComboBox SelectedIndex="1" Width="200">
                        <ComboBoxItem Content="Conservative" />
                        <ComboBoxItem Content="Moderate" />
                        <ComboBoxItem Content="Aggressive" />
                    </ComboBox>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>